<h1>Eat Da Burgers!</h1>

<h2>Burgers that are not devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
    
      <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
        <div class="form-group">
          <p>{{this.id}}. {{this.burger_name}}   
          <input type= "hidden" name = "burger_id" type="text" value={{this.id}}>
          <button type="submit">DEVOURE IT </button>
          </p>
        </div>
    </form>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<main>
      <div class="col s6">
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>Add A Burger Option</h2>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Uber Delicious Burger">
      <button type="submit" class="addBurgerButton">Add The Burger</button>
    </form>
  </div>
</div>
